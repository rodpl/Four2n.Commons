<?xml version="1.0" encoding="utf-8"?>
<!--
    ==================================================
        Common file for VS and external build files
    ==================================================
-->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="3.5">
    
    <!-- Root Path definition relative for actual build file -->
    <PropertyGroup>
        <RootPath Condition=" '$(RootPath)' == '' ">$(MSBuildProjectDirectory)</RootPath>
        <ToolsPath>$(RootPath)\tools</ToolsPath>
    </PropertyGroup>

    <!-- 3rd Party Program Paths -->
    <PropertyGroup>
        <MSBuildExtensionsPath Condition="Exists('$(ToolsPath)\msbuild')" >$(ToolsPath)\msbuild</MSBuildExtensionsPath>
    </PropertyGroup>
    
    <!-- AssemblyInfo Properties -->
    <PropertyGroup>
        <AssemblyInfoFile>AssemblyInfo.cs</AssemblyInfoFile>
        <AssemblyTitle>rod.Commons - $(AssemblyTitle)</AssemblyTitle>
        <AssemblyDescription>Utility Libraries.</AssemblyDescription>
        <AssemblyCompany>rod</AssemblyCompany>
        <AssemblyCopyright>Copyright 2006-2008 rod</AssemblyCopyright>
        <AssemblyKeyFile>$(RootPath)\nGrape.snk</AssemblyKeyFile>
        <AssemblyProduct>rod.Commons</AssemblyProduct>
        <AssemblyVersion>0.1</AssemblyVersion>
    </PropertyGroup>
    
    <!-- Add additional depends to Build target -->
    <PropertyGroup>
        <CoreCompileDependsOn>
            IncludeGeneratedAssemblyInfo;
            $(CoreCompileDependsOn)
        </CoreCompileDependsOn>
    </PropertyGroup>

    <!-- Helper Files -->
    <PropertyGroup>
        <IterationNumberFile>$(RootPath)\IterationNumber.txt</IterationNumberFile>
    </PropertyGroup>
    
    <Import Project="$(RootPath)\rod.Commons.Targets" />
    <Import Condition="Exists('$(RootPath)\Common.User.Targets')" Project="$(RootPath)\Common.User.Targets" />
    
</Project>
